  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test",
    "test:backend": "cd backend && npm run test",
    "lint": "npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "db:setup": "mysql -u root -p < backend/src/database/schema.sql",
    "db:seed": "mysql -u root -p app_para_brillar < backend/src/database/seed.sql",
    "db:reset": "npm run db:setup && npm run db:seed",
    "mobile:android": "npm run mobile:build && npx cap open android",
    "mobile:ios": "npm run mobile:build && npx cap open ios",
    "mobile:build": "npm run build && npx cap sync"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
